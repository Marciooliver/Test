Sub homework_2()

Dim Ticker As String
Dim Vol_Tot As Double
Dim LastRow As Long
Dim Summary_Row As Integer
Dim Open_Value As Double
Dim Change_Value As Double
Dim Perc_Change As Double
Dim Gr_Inc As Double
Dim Tic_Cap As String

Gr_Inc = 0
Perc_Change = 0
Open_Value = Cells(2, 3)
Change_Value = 0
Summary_Row = 2
Vol_Tot = 0
LastRow = Cells(Rows.Count, "A").End(xlUp).Row


For i = 2 To LastRow
If Cells(i, 1).Value = Cells(i + 1, 1).Value Then
    Vol_Tot = Vol_Tot + Cells(i, 7).Value
Else
    Vol_Tot = Vol_Tot + Cells(i, 7).Value
    Ticker = Cells(i, 1).Value
    Cells(Summary_Row, 9).Value = Ticker
    Cells(Summary_Row, 12).Value = Vol_Tot
    Change_Value = Cells(i, 6).Value - Open_Value
    Perc_Change = Change_Value / (Cells(i, 6) + Open_Value)
    Cells(Summary_Row, 11).Value = Perc_Change
    Cells(Summary_Row, 10).Value = Change_Value
    Open_Value = Cells(i + 1, 3).Value
            If Change_Value <= 0 Then
                Cells(Summary_Row, 10).Interior.ColorIndex = 3
            Else
                Cells(Summary_Row, 10).Interior.ColorIndex = 4
            End If
        If Cells(2, 17) < Change_Value Then
            Cells(2, 17).Value = Change_Value
            Cells(2, 16).Value = Ticker
        End If
        If Cells(3, 17) > Change_Value Then
            Cells(3, 17).Value = Change_Value
            Cells(3, 16).Value = Ticker
        End If
        If Cells(4, 17) < Vol_Tot Then
            Cells(4, 17).Value = Vol_Tot
            Cells(4, 16).Value = Ticker
        End If
    Vol_Tot = 0
    Summary_Row = Summary_Row + 1
End If
Next i

Cells(2, 17).Style = "Percent"
Cells(3, 17).Style = "Percent"
For b = 2 To LastRow
    Cells(b, 11).Style = "Percent"
Next b

End Sub
